{
  "phases": {
    "verify": {
      "context": {
        "resources": {
          "url": "{HELM_CHART}",
          "path": "/harbor"
        },
        "application": {
          "kind": "HELM",
          "details": {
            "name": "harbor",
            "version": "1.8.0",
            "repository": {
              "url": "https://helm.goharbor.io/"
            }
          },
          "values": "{CHART_VALUES}"
        },
        "target_platform": {
          "target_platform_id": "274c2d11-f590-4dea-9a53-04be37f17bdf"
        }
      },
      "actions": [
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/harbor/.vib/goss"
            },
            "config": {
              "remote": {
                "workload": "deploy-harbor-portal"
              }
            }
          }
        }        
      ]
    }
  }
}
