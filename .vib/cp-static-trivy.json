{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{HELM_CHART}",
          "path": "/harbor"
        }
      },
      "actions": [
        {
          "action_id": "linter-packaging",
          "params": {
            "kind": "HELM"
          }
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{HELM_CHART}",
          "path": "/harbor"
        },
        "application": {
          "kind": "HELM",
          "details": {
            "name": "harbor",
            "version": "1.8.0",
            "repository": {
              "url": "https://helm.goharbor.io/"
            }
          },
          "values": "{CHART_VALUES}"
        }
      },
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "config": {
              "threshold": "CRITICAL",
              "vuln_type": ["OS"]
            }
          }
        }
      ]
    }
  }
}